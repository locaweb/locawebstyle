        <tr><td>.ls-mask-money</td><td>#.##0,00</td></tr>
        <tr><td>.ls-mask-number</td><td>#.##0</td></tr>
        <tr><td>.ls-mask-ip_address</td><td>0ZZ.0ZZ.0ZZ.0ZZ</td></tr>
        <tr><td>.ls-mask-percent</td><td>##0,00%</td></tr>
      </tr>
