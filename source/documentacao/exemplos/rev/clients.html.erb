---
title: Lista de clientes
layout: examples
---

<h1 class="ls-title-intro ls-ico-users">Clientes</h1>

<a href="<%= base_url %>/documentacao/exemplos/rev/new-client" class="ls-btn-primary">Cadastrar novo</a>

<div class="ls-box-filter">
  <form action="#" class="ls-form ls-form-inline ls-float-left">
    <label class="ls-field">
        <b class="ls-label">Status</b>
        <div data-ls-module="customFields">
          <select name="">
            <option value="">Todos</option>
            <option value="">Ativo</option>
            <option value="">Desativados</option>
            <option value="">Bloqueados por bounce</option>
          </select>
        </div>
      </label>
  </form>
  <form action="#" class="ls-form ls-float-right">
    <label class="ls-field">
      <b class="ls-label ls-hidden-accessible">Nome do cliente</b>
      <input type="text" name="nome" placeholder="Nome e sobrenome" required >
    </label>
    <button type="submit" class="ls-btn">Buscar</button>
  </form>
</div>

<table class="ls-table">
  <thead>
    <tr>
      <th>Nome do cliente</th>
      <th class="ls-txt-center hidden-xs">Status</th>
      <th class="ls-txt-center">Envios disponíveis</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- 5.times do |num| %>
      <tr>
        <td>
          <a href="<%= base_url %>/documentacao/exemplos/rev/client"><%= lorem.name %></a>
          <% if num%2 == 0 %>
            <span class='ls-tag hidden-xs'>Não recorrente</span>
          <% end %>
        </td>
        <td class="ls-txt-center hidden-xs">Ativo</td>
        <td class="ls-txt-center">
          100.000
          <small class="ls-display-block">até 01/01/2014</small>
        </td>
        <td class="ls-txt-right ls-regroup">
          <a href="<%= base_url %>/documentacao/exemplos/rev/client" class="ls-btn ls-btn-sm">Administrar</a>
          <div data-ls-module="dropdown" class="ls-dropdown ls-pos-right">
            <a href="#" class="ls-btn ls-btn-sm"></a>
            <ul class="ls-dropdown-nav">
              <li><a href="#">Desativar</a></li>
              <li><a href="#" class="ls-color-danger">Excluir</a></li>
            </ul>
          </div>

        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<div class="ls-pagination-filter">
  <ul class="ls-pagination">
    <li><a href="#">« Anterior</a></li>
    <li class="ls-active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#" class="hidden-xs">4</a></li>
    <li><a href="#" class="hidden-xs">5</a></li>
    <li><a href="#">Próximo »</a></li>
  </ul>

  <div class="ls-filter-view">
    <label for="">
      Exibir
      <select name="" id="">
        <option value="10">10</option>
        <option value="30">30</option>
        <option value="50">50</option>
        <option value="100">100</option>
      </select>
      ítens por página
    </label>
  </div>
</div>
