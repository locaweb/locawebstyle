      </nav>
    </aside>

    <!-- We recommended use jQuery 1.10 or up -->
    <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <script src="http://assets.locaweb.com.br/locastyle/<%= settings.stable %>/javascripts/locastyle.js" type="text/javascript"></script>
  </body>
</html>
