<div class="doc-section">

  <table class="ls-table">
    <thead>
      <tr>
        <th>Classes</th>
        <th>Descrição</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>.ls-form</td>
        <td>Customiza todos os selects, checkbox, radios.</td>
      </tr>
      <tr>
        <td>.ls-input-original</td>
        <td>Mantém a aparência original do input.</td>
      </tr>
    </tbody>
  </table>

  <h2 class="ls-title-1">Exemplos</h2>
  <div data-ls-module="customFields">
    <!-- Select -->
    <div class="ls-box-demo">
      <p class="ls-title2"> Select customizada </p>
      <%= partial 'documentacao/shared/custom-fields', locals: {field: 'select'} %>
    </div>
    <code class="language-html ls-well-example">
      <%= partial 'documentacao/shared/custom-fields', locals: {field: 'select'} %>
    </code>
    <!-- End Select -->
    <!-- Radio -->
    <div class="ls-box-demo">
      <p cl ass="ls-title2"> Radio customizado </p>
      <input type="radio" name="radio1" checked="checked" value="1">
      <input type="radio" name="radio1" value="2">
    </div>
    <code class="language-html ls-well-example">
      <%= partial 'documentacao/shared/custom-fields', locals: {field: 'radio'} %>
    </code>
    <!-- End Radio -->

    <!-- Checkbox -->
    <div class="ls-box-demo">
      <p class="ls-title2"> Checkbox customizada </p>
      <input type="checkbox" name="checkboxes" checked="checked">
      <input type="checkbox" name="checkboxes">
      <input type="checkbox" name="checkboxes">
    </div>
    <code class="language-html ls-well-example">
      <%= partial 'documentacao/shared/custom-fields', locals: {field: 'checkbox'} %>
    </code>
    <!-- End Checkbox -->
  </div>
