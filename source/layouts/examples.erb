<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <title><%= current_page.data.title %></title>
  <meta name="description" content="<%= current_page.data.description %>" />
  <meta name="keywords" content="<%= current_page.data.keywords %>" />
  <%= stylesheet_link_tag "locastyle" %>
  <%= stylesheet_link_tag "documentacao" %>
</head>
<body class="<%= page_classes %>">
  <div class="ls-topbar">

    <!-- Barra de Notificações -->
    <div class="ls-notification-topbar">

      <!-- Links de apoio -->
      <div class="ls-alerts-list">
        <a href="#" class="ls-ico-bullhorn"><span>Notificações</span></a>
        <a href="#" class="ls-ico-bell-o"><span>Ajuda</span></a>
        <a href="#" class="ls-ico-question"><span>Sugestões</span></a>
      </div>

      <!-- Dropdown com detalhes da conta de usuário -->
      <div class="ls-user-account">
        <a href="#" class="ls-ico-user">
          Franco&nbsp;
          <small>(fmolina)</small>
          <input type="checkbox" name="user" value="">
        </a>
      </div>
    </div>

    <!-- Nome do produto/marca -->
    <div class="ls-brand-name">
      <h1><a href="#" class='ls-ico-envelope'>Revenda Email Marketing</a></h1>
    </div>
  </div>
  <aside class="ls-sidebar">
    <div class="ls-area-account">
      <h2 class="ls-title-2">Administrando</h2>
      <h3 class="ls-title-3">subdominio.locaweb.com.br</h3>
      <a href="#" class="ls-btn-xs ls-btn-dark">VER TODOS</a>
    </div>
    <nav class="ls-menu">
      <ul>
         <li><a href="#" class="ls-ico-home">Página inicial</a></li>
         <li><a href="#" class="ls-ico-users">Clientes</a></li>
         <li><a href="#" class="ls-ico-stats">Relatórios</a></li>
         <li>
          <a href="#" class="ls-ico-config">Configurações</a>
          <ul>
            <li><a href="">Submenu</a></li>
            <li><a href="">Submenu</a></li>
            <li><a href="">Submenu</a></li>
          </ul>
        </li>
       </ul>
    </nav>
  </aside>
  <main class="ls-main">
    <div class="ls-container">
      <%= yield %>
    </div>
  </main>
  <%= javascript_include_tag  "locastyle" %>
  <%= javascript_include_tag  "documentacao" %>
</body>
</html>
