<!doctype html>
<html class="ls-theme-gold">
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <title><%= current_page.data.title %></title>
  <meta name="description" content="<%= current_page.data.description %>" />
  <meta name="keywords" content="<%= current_page.data.keywords %>" />
  <%= stylesheet_link_tag "locastyle" %>
  <%= stylesheet_link_tag "docs" %>
</head>
<body class="<%= page_classes %>">
  <div class="ls-topbar">
    <h1 class="ls-brand-name ls-ico-question"><a href="/">Documentação Locastyle</a></h1>
  </div>
  <aside class="ls-sidebar">
    <nav class="ls-menu">
      <ul>
         <li><a href="/documentacao/collapse/" >Collapse</a></li>
         <li><a href="/documentacao/popover/" >Popover</a></li>
       </ul>
    </nav>
  </aside>
  <main class="ls-main">
    <div class="ls-container">
      <%= yield %>
    </div>
  </main>
  <%= javascript_include_tag  "libs/jquery-2.1.0.min" %>
  <%= javascript_include_tag  "locastyle" %>
  <%= javascript_include_tag  "docs" %>
</body>
</html>
