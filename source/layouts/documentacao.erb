<!doctype html>
<html class="ls-theme-green">
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <title><%= current_page.data.title %></title>
  <meta name="description" content="<%= current_page.data.description %>" />
  <meta name="keywords" content="<%= current_page.data.keywords %>" />
  <%= stylesheet_link_tag "locastyle" %>
  <%= stylesheet_link_tag "docs" %>
</head>
<body class="<%= page_classes %>">
  <div class="ls-topbar">
    <h1 class="ls-brand-name">
      <a href="/">Locastyle</a>
    </h1>
    <div class="ls-float-right ls-display-none">
      <form role="form">
        <div class="form-group">
          <input type="email" class="form-control input-lg" id="search" placeholder="Sart type 'a' ....">
          <div id="results"></div>
        </div>
      </form>
    </div>
  </div>
  <aside class="ls-sidebar">
    <nav class="ls-menu">
      <ul>
      <% sub_pages('documentacao').each do |resource| %>
        <% if resource.url.split('/')[2] == 'data.json' %>
        <% else %>
          <li>
            <a <% if current_page.url ==  resource.url%>class="ls-active"<% end %> href="<%= resource.url %>"><%= resource.data.title%></a>
          </li>
        <% end %>
      <% end %>
       </ul>
    </nav>
  </aside>
  <main class="ls-main">
    <div class="ls-container">
      <div class="row">
        <h1 class="ls-title-intro"><%= current_page.data.title %></h1>
        <p class="ls-title-2">
          <%= current_page.data.description %>
        </p>
      </div>
      <%= yield %>
    </div>
  </main>
  <%= javascript_include_tag  "libs/jquery-2.1.0.min" %>
  <%= javascript_include_tag  "locastyle" %>
  <%= javascript_include_tag  "docs" %>
 </body>
</html>
